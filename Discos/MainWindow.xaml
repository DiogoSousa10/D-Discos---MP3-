<Window x:Class="Discos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Discos"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Margin="0,0,0,384">
            <MenuItem Header="Ficheiro">
                <MenuItem x:Name="AbrirXML" Header="Abrir" Click="AbrirXML_Click" />
                <MenuItem x:Name="GuardarXML" Header="Guardar" Click="GuardarXML_Click" />
                <MenuItem x:Name="Sair" Header="Sair" Click="Sair_Click" />
            </MenuItem>
        </Menu>
        <TreeView x:Name="tvDiscos" Margin="45,85,64,72"/>
    </Grid>
</Window>
